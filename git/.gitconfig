[include]
  path = /home/john/.delta-themes.gitconfig

[user]
  email = subscribe+gh@b234r.net
  name = John

[core]
  editor = nvim
  pager = delta

[pager]
  blame = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
  hyperlinks = true
  dark = true
  line-numbers = true
  features = tokyonight  

[merge]
  conflictstyle = zdiff3

[alias]
  patch = !git --no-pager diff --no-color

[color]
  ui = true
